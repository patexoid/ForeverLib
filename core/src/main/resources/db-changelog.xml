<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet author="patex" id="1">
        <sql>INSERT INTO PUBLIC.EXT_LIBRARY (LOGIN, PASSWORD, URL, NAME, OPDS_PATH) VALUES (null, null,
            'http://flibusta.is', 'flibusta', 'opds')
        </sql>
    </changeSet>
    <changeSet author="patex" id="2">
        <addColumn tableName="EXT_LIBRARY" >
            <column name="PROXY_TYPE" type="varchar(10)"/>
            <column name="PROXY_HOST" type="varchar(255)" />
            <column name="PROXY_PORT" type="int"/>
        </addColumn>
    </changeSet>

    <changeSet author="patex" id="3">
        <createTable tableName="users">
            <column name="username" type="VARCHAR(50)">
                <constraints primaryKey="true" primaryKeyName="users_primary"/>
            </column>
            <column name="password" type="VARCHAR(500)"/>
            <column name="enabled" type="BOOLEAN(1)"/>
        </createTable>

        <createTable tableName="authorities">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="authorities_primary"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints foreignKeyName="AUTHORITY_USERS_USERNAME" references="users(username)"/>
            </column>
            <column name="authority" type="VARCHAR(50)"/>
        </createTable>
        <addUniqueConstraint columnNames="username,authority"
                             tableName="authorities"
                             constraintName="fk_username_authority"/>
    </changeSet>

    <changeSet id="4" author="patex">
        <createTable tableName="ZUSER_CONFIG">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="ZUSER_CONFIG_primary"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints foreignKeyName="ZUSER_CONFIG_USERS_USERNAME" references="users(username)"/>
            </column>
            <column name="telegram_chat_id" type="BIGINT(19)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="patex">
        <createTable tableName="SUBSCRIPTION">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="SUBSCRIPTION_primary"/>
            </column>
            <column name="EXT_LIBRARY_ID" type="BIGINT(19)">
                <constraints foreignKeyName="SUBSCRIPTION_EXT_LIBRARY" references="EXT_LIBRARY(ID)"/>
            </column>
            <column name="LINK" type="VARCHAR(500)"/>
            <column name="USER_USERNAME" type="VARCHAR(50)">
                <constraints foreignKeyName="SUBSCRIPTION_USER" references="users(username)"/>
            </column>
        </createTable>
        <createTable tableName="SAVED_BOOK">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="SAVED_BOOK_primary"/>
            </column>
            <column name="EXT_LIBRARY_ID" type="BIGINT(19)">
                <constraints foreignKeyName="SAVED_BOOK_EXT_LIBRARY" references="EXT_LIBRARY(ID)"/>
            </column>
            <column name="EXT_ID" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="patex">
        <addColumn tableName="BOOK" >
            <column name="DUPLICATE" type="BOOLEAN(1)"/>
            <column name="CONTENT_SIZE" type="INTEGER"/>
        </addColumn>
        <sql>
            UPDATE BOOK SET DUPLICATE=false
        </sql>
        <createTable tableName="BOOK_CHECK_QUEUE">
            <column autoIncrement="true" name="ID" type="BIGINT(19)">
                <constraints primaryKey="true" primaryKeyName="BOOK_CHECK_QUEUE_ID"/>
            </column>
            <column name="BOOK_ID" type="BIGINT(19)">
                <constraints foreignKeyName="BOOK_CHECK_QUEUE_BOOK_ID" references="BOOK(ID)"/>
            </column>
        </createTable>
        <sql>
            INSERT INTO BOOK_CHECK_QUEUE SELECT null,b.id from BOOK b
        </sql>
    </changeSet>
    <changeSet id="7" author="BOOK_CHECK_QUEUE">
        <delete tableName="BOOK_CHECK_QUEUE"/>
        <addColumn tableName="BOOK_CHECK_QUEUE" >
            <column name="BOOK1_ID" type="BIGINT(19)">
                <constraints foreignKeyName="BOOK_CHECK_QUEUE_BOOK1_ID" references="BOOK(ID)"/>
            </column>
            <column name="BOOK2_ID" type="BIGINT(19)">
                <constraints foreignKeyName="BOOK_CHECK_QUEUE_BOOK2_ID" references="BOOK(ID)"/>
            </column>
            <column name="USER_USERNAME" type="VARCHAR(50)">
                <constraints foreignKeyName="BOOK_CHECK_QUEUE_USER" references="users(username)"/>
            </column>
        </addColumn>
        <dropColumn tableName="BOOK_CHECK_QUEUE" columnName="BOOK_ID"/>
        <sql>
            UPDATE BOOK SET DUPLICATE=false
        </sql>
    </changeSet>
</databaseChangeLog>